# Telegram Bot Token from BotFather
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Gemini API Key from Google AI Studio
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Default email address for forwarding (optional, user can set it via bot command)
DEFAULT_EMAIL=your_email@example.com

# Available Gemini models (comma-separated, no spaces)
# Example: GEMINI_MODELS=gemini-pro,gemini-pro-vision
GEMINI_MODELS=gemini-pro

# Default Gemini model to use
DEFAULT_GEMINI_MODEL=gemini-pro

# SMTP Configuration for sending emails
SMTP_SERVER=your_smtp_server.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password_or_app_password
